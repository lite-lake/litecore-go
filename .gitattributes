# Auto detect text files and perform LF normalization
* text=auto

# Source code files - always use LF
*.go text eol=lf
*.mod text eol=lf
*.sum text eol=lf
*.tmpl text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.xml text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Windows specific files - keep CRLF if needed
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.db binary
*.sqlite binary

# Docker files
Dockerfile text eol=lf
.dockerignore text eol=lf

# CI/CD files
*.yml text eol=lf
*.yaml text eol=lf
.github/** text eol=lf
